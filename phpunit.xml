<phpunit bootstrap="./vendor/autoload.php">
    <testsuites>
        <testsuite name="unit">
            <directory>./tests</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">./src</directory>
            <exclude>
                <file>./src/Config/Config.sample.php</file>
            </exclude>
        </whitelist>
    </filter>
</phpunit>